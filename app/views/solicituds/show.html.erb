          <%=	 "aceptado"%>
          <% elsif @solicitud.estado == 2 %>
          <%=	 "rechazado"%>
          <% elsif @solicitud.estado == 3 %>
          <%=	 "terminado"%>
          <% elsif @solicitud.estado == 4 %>
          <%=	 "entregado"%>
