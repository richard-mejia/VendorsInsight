<h1>Lista solicitudes</h1></center>
      <!-- Main component for a primary marketing message or call to action -->
      <div class="jumbotron">
          <% flash.each do |type, message| %>
  <div class="alert <%= bootstrap_class_for(:error) %> fade in">
    <button class="close" data-dismiss="alert">×</button>
    <%= message %>
  </div>
 <% end %>
          
<div class="table-responsive">
<table class="table" WIDTH="100%" >
  <thead bgcolor = "cccccc">
    <tr>
      <th>Nro</th>
      <th>Fecha</th>
      <th>Cliente</th>
      <th>Vendedor</th>
      <th>Cantidad</th>
      <th>Estado</th>
      <th colspan="3"></th>
          
      </tr>
  </thead>

  <tbody>
    <% @solicitudes.each do |solicitud| %>
    <tr>
      <td HEIGHT="40"><%= solicitud.id%></td>
      <td><%= solicitud.fecha %></td>
      <td><%= solicitud.cliente %></td>
      <% if get_usuario(solicitud.vendedor_id) != nil %>
      <td><%= get_usuario(solicitud.vendedor_id).nombre %>&nbsp; <%= get_usuario(solicitud.vendedor_id).apellido %></td>
      <% else %>
      <td></td>
      <% end %>
      <td><%= solicitud.cantidad %></td>
      <td><% if solicitud.estado == 0 %>
	      <%=	 "pendiente"%>
          <% elsif solicitud.estado == 1 %>
          <%=	 "aceptado"%>
          <% elsif solicitud.estado == 2 %>
          <%=	 "rechazado"%>
          <% elsif solicitud.estado == 3 %>
          <%=	 "terminado"%>
          <% elsif solicitud.estado == 4 %>
          <%=	 "entregado"%>
	<% end %>&nbsp; &nbsp;
        <% if solicitud.estado == 1 %>
          <%= link_to 'terminar', terminar_solicitud_path(solicitud), method: :terminar, data: { confirm: 'Está seguro que desea cambiar de estado en la solicitud?' }, class: 'btn terminar' %>
          <% elsif solicitud.estado == 3 %>
          <%= link_to 'entregar', entregar_solicitud_path(solicitud), method: :entregar, data: { confirm: 'Está seguro que desea cambiar de estado en la solicitud?' }, class: 'btn entregar' %>    
      <% end %>
      </td>
      
      <td><%= link_to '', solicitud, class: 'fa fa-search' %></td>	
      
    </tr>
    <% end %>
  </tbody>
</table>                               
